<span class="note">※は必須項目です。</span>

<table class="show">
  <tr>
    <th><%= @item.locale(:state) %></th>
    <td><%= f.radio_buttons :state, @item.class::STATE_OPTIONS, :class => 'states' %></td>
  </tr><tr>
    <th><%= @item.locale(:fixed_start_date) %></th>
    <td>
      <%= f.text_field :fixed_start_date, :value => value_for_datepicker(f.object_name, :fixed_start_date),
                             :style => 'width: 150px;', :class => 'datepicker' %>
      &nbsp;&nbsp;～&nbsp;&nbsp;
      <%= f.text_field :fixed_end_date, :value => value_for_datepicker(f.object_name, :fixed_end_date),
                             :style => 'width: 150px;', :class => 'datepicker' %>
    </td>
  </tr><tr>
    <th>対象条件</th>
    <td>
      <table id="categories">
        <tbody>
          <tr>
            <th><%= @item.locale(:repeat_type) %></th>
            <td><%= f.select :repeat_type, @item.class::REPEAT_OPTIONS, include_blank: true %></td>
          </tr>
          <tr>
            <th><%= @item.locale(:start_date) %></th>
            <td><%= f.text_field :start_date, :value => value_for_datepicker(f.object_name, :start_date),
                             :style => 'width: 150px;', :class => 'datepicker' %></td>
          </tr>
          <tr>
            <th><%= @item.locale(:end_date) %></th>
            <td><%= f.text_field :end_date, :class => 'name' %></td>
          </tr>
        </tbody>
      </table>
    </td>
  </tr><tr>
    <th><%= @item.locale(:business_hours_start_time) %> <span class="note">※</span></th>
    <td>
      <%= f.text_field :business_hours_start_time, :style => 'width: 120px;', :class => 'timepicker' %>
      &nbsp;&nbsp;～&nbsp;&nbsp;
      <%= f.text_field :business_hours_end_time, :style => 'width: 120px;', :class => 'timepicker' %>
    </td>
  </tr>
</table>

<%= creator_form f %>

<%= javascript_tag do -%>

$(document).ready(function () {
  <%= enable_datepicker_script -%>
  <%= enable_timepicker_script -%>
});

<%- end -%>
